
@model webproje.Models.Marka
@using webproje.Models

@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col-sm-4">
            <h3>Markalar</h3>
  
            <ul class="nav nav-pills flex-column" style="font-weight: bold;">
                <li class="nav-item">
                    <a class="nav-link text-black "  href="@Url.Action("MarkaListele", "Marka")">LİSTELE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active "  style="background-color:steelblue" href="@Url.Action("MarkaEkle", "Marka")">EKLE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("MarkaSil", "Marka")">SİL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("MarkaGüncelle", "Marka")">GÜNCELLE</a>
                </li>

            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <h3>Marka Ekle</h3>
            <hr />
            @using (Html.BeginForm("MarkaEkle", "Marka", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="row">
                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.markaAdi, new { @class = "control-label " })
                        </div>
                    <div class="col-sm-3">
                 
                            @Html.TextBoxFor(model => model.markaAdi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.markaAdi, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-sm-3">
                      
                            <input type="submit" value="Ekle" class="btn " style="background-color:steelblue; color:white  " />
                      
                    </div>
                </div>
            }




        </div>
    </div>
</div>


