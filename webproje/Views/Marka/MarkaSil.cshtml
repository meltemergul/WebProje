@model List<webproje.Models.Marka>

@{
    ViewBag.Title = "Marka Sil";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <h3>Markaları Sil</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Marka Id</th>
                <th>Marka Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marka in Model)
            {
                <tr>
                    <td>@marka.markaId</td>
                    <td>@marka.markaAdi</td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="silMarka(@marka.markaId)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        function silMarka(markaId) {
            if (confirm('Bu markayı silmek istediğinizden emin misiniz?')) {
                window.location.href = '@Url.Action("MarkaSil", "Marka")?markaId=' + markaId;
            }
        }
    </script>
</div>
