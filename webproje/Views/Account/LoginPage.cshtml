
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/Login.cshtml";
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

}


@model webproje.Models.UserModel

<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">


            @using (Html.BeginForm("LoginPage", "Account", FormMethod.Post))
            {<div class="jumbotron bg-light mt-5 border p-3 text-center">
                    <h2>Admin Paneli Giriş</h2>

                    @Html.ValidationSummary(true)
                    <div class="mb-3 mt-3">

                        @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                        @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group justify-content-center align-content-center">
                        <div>
                            <button type="submit" class="btn btn-success btn-block" value="Login">Giriş Yap</button>
                        </div>
                    </div>
                </div>

            }


        </div>
        <div class="col-2"></div>
    </div>
</div>

