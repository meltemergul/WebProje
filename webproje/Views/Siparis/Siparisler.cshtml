@using webproje.Models
@model List<webproje.Models.Siparis>

@{
    ViewBag.Title = "Sepetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12">
            <h3>Sepetim</h3>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sipariş Id</th>
                        <th>Ürün Id</th>
                        <th>Sipariş Tarihi</th>
                        <th>Üye Id</th>
                        <th>Adet</th>
                        <th>Kargo Id</th>
                        <th>Sipariş Durum Id</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var siparis in Model)
                    {
                        <tr>
                            <td>@siparis.siparisId</td>
                            <td>@siparis.urunId</td>
                            <td>@siparis.siparisTarihi</td>
                            <td>@siparis.uyeId</td>
                            <td>@siparis.adet</td>
                            <td>@siparis.kargoId</td>
                            <td>@siparis.siparisDurumId</td>
                            <td>
                                <a href="@Url.Action("SiparisSil", "Siparis", new { siparisId = siparis.siparisId })" class="btn btn-danger btn-sm fw-bold">Sil</a>
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
      
    </div>
</div>

