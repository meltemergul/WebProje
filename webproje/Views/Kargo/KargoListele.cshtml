

@using webproje.Models
@model List<webproje.Models.Kargo>


@{

    ViewBag.Title = "Kargo Listele";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col-sm-4">
            <h3>Kargolar</h3>
            <ul class="nav nav-pills flex-column" style="font-weight: bold;">
                <li class="nav-item">
                    <a class="nav-link active " style="background-color:steelblue" href="@Url.Action("KargoListele", "Kargo")">LİSTELE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KargoEkle", "Kargo")">EKLE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("KargoSil", "Kargo")">SİL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KargoGüncelle", "Kargo")">GÜNCELLE</a>
                </li>

            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Kargo Id</th>
                    <th>Kargo Adı</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>SehirId</th>
                    <th>İşlemler</th>
                </tr>
                <tbody>
                    @foreach (var kargo in Model)
                    {
                        <tr>
                            <td>@kargo.kargoId</td>
                            <td> @kargo.kargoAdi</td>
                            <td>@kargo.Telefon</td>
                            <td> @kargo.Adres</td>
                            <td>@kargo.sehirId</td>
                            <td>
                                <a href="@Url.Action("KargoSil", "Kargo", new { kargoId = kargo.kargoId })" class="btn btn-danger btn-sm fw-bold">Sil</a>
                                <a href="@Url.Action("KargoGuncelle", "Kargo", new { kargoId = kargo.kargoId })" class="btn btn-warning btn-sm fw-bold">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

