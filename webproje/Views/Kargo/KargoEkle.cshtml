@model webproje.Models.Kargo


@{
    ViewBag.Title = "Kargo Ekle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-sm-4">
            <h3>Kargolar</h3>
            <ul class="nav nav-pills flex-column" style="font-weight: bold;">
                <li class="nav-item">
                    <a class="nav-link   text-black"  href="@Url.Action("KargoListele", "Kargo")">LİSTELE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" style="background-color:steelblue" href="@Url.Action("KargoEkle", "Kargo")">EKLE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("KargoSil", "Kargo")">SİL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KargoGüncelle", "Kargo")">GÜNCELLE</a>
                </li>

            </ul>
            <hr class="d-sm-none">
        </div>

        <div class="col-sm-8">
            <h3>Kargo Ekle</h3>
            <hr />

            @using (Html.BeginForm("KargoEkle", "Kargo", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="row">
                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.kargoAdi, new { @class = "control-label " })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.kargoAdi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.kargoAdi, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.Telefon, new { @class = "control-label " })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.Adres, new { @class = "control-label " })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextAreaFor(model => model.Adres, new { @class = "form-control", rows = 4 })
                        @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.sehirId, new { @class = "control-label " })
                    </div>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.sehirId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.sehirId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <input type="submit" value="Ekle" class="btn" style="background-color:steelblue; color:white" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

