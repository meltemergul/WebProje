
@model webproje.Models.Kategori
@using webproje.Models
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col-sm-4">
            <h3>Kategoriler</h3>

            <ul class="nav nav-pills flex-column" style="font-weight: bold;">
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("KategoriListele", "Kategori")">LİSTELE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active " style="background-color:steelblue" href="@Url.Action("KategoriEkle", "Kategori")">EKLE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("KategoriSil", "Kategori")">SİL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KategoriGuncelle", "Kategori")">GÜNCELLE</a>
                </li>

            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <h3>Kategori Ekle</h3>
            <hr />
            @using (Html.BeginForm("KategoriEkle", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="row">
                    <div class="col-sm-2 fw-bold">
                        @Html.LabelFor(model => model.kategoriAdi, new { @class = "control-label " })
                    </div>
                    <div class="col-sm-3">

                        @Html.TextBoxFor(model => model.kategoriAdi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.kategoriAdi, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-sm-3">

                        <input type="submit" value="Ekle" class="btn " style="background-color:steelblue; color:white  " />

                    </div>
                </div>
            }




        </div>
    </div>
</div>


