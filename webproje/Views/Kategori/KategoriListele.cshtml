@using webproje.Models
@model List<webproje.Models.Kategori>


@{

    ViewBag.Title = "Kategori Listele";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <div class="row">
        <div class="col-sm-4">
            <h3>Kategoriler</h3>
            <ul class="nav nav-pills flex-column" style="font-weight: bold;">
                <li class="nav-item">
                    <a class="nav-link active " style="background-color:steelblue" href="@Url.Action("KategoriListele", "Kategori")">LİSTELE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KategoriEkle", "Kategori")">EKLE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black " href="@Url.Action("KategoriSil", "Kategori")">SİL</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="@Url.Action("KategoriGüncelle", "Kategori")">GÜNCELLE</a>
                </li>

            </ul>
            <hr class="d-sm-none">
        </div>
        <div class="col-sm-8">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Kategori Id</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
                <tbody>
                    @foreach (var kategoriler in Model)
                    {
                        <tr>
                            <td>@kategoriler.kategoriId</td>
                            <td> @kategoriler.kategoriAdi</td>
                            <td>
                                <a href="@Url.Action("KategoriSil", "Kategori", new { kategoriId =kategoriler.kategoriId })" class="btn btn-danger btn-sm  fw-bold">Sil</a>
                                <a href="@Url.Action("KategoriGuncelle", "Kategori", new { kategoriId = kategoriler.kategoriId })" class="btn btn-warning btn-sm fw-bold">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

