@model List<webproje.Models.Kategori>

@{
    ViewBag.Title = "Kategori Sil";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid mt-5 ">
    <h3>Kategorileri Sil</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Kategori Id</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kategori in Model)
            {
                <tr>
                    <td>@kategori.kategoriId</td>
                    <td>@kategori.kategoriAdi</td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="silKategori(@kategori.kategoriId)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        function silKategori(kategoriId) {
            if (confirm('Bu markayı silmek istediğinizden emin misiniz?')) {
                window.location.href = '@Url.Action("KategoriSil", "Kategori")?kategoriId=' + kategoriId;
            }
        }
    </script>
</div>

